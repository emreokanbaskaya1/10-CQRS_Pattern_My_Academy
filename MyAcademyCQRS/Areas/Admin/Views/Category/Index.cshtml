@model List<GetCategoriesQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Categories</h1>

<table class="table table-bordered">
    @{
        int count = 0;
    }



    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Actions</th>
    </tr>


    @foreach(var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>
                <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id"  class="btn btn-danger">Delete</a>
                <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id"  class="btn btn-info">Update</a>
            </td>

        </tr>
    }
</table>

<a asp-controller="Category" asp-action="CreateCategory" class="btn btn-dark">Create a New Category</a>

