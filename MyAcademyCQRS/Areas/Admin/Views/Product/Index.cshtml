@model List<GetProductsQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>

<table class="table table-bordered">
    @{
        int count = 0;
    }

    <tr>
        <th>#</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Category</th>
        <th>Actions</th>
    </tr>


    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price TL</td>
            <td>@item.Category.Name</td>
            <td>
                <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-info">Update</a>
            </td>

        </tr>
    }
</table>

<a asp-controller="Product" asp-action="CreateProduct" class="btn btn-dark">Create a New Product</a>